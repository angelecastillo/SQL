--What hobbies do these famous people have?

SELECT people.fullname, hobbies.hobby_name
FROM people
JOIN hobbies
ON people.id = hobbies.id;

--Sorts the famous people by their hobby and number of years practiced.

SELECT people.fullname, hobbies.hobby_name, hobbies.years_practiced
FROM people
JOIN hobbies
ON people.id = hobbies.id
GROUP BY fullname
ORDER BY hobby_name, years_practiced DESC;
